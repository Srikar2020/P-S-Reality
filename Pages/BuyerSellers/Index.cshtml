@page
@model P_S_Reality.Pages.BuyerSellers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of Buyers & Sellers of Properties</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuyerSeller[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerSeller[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerSeller[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerSeller[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerSeller[0].PreferredContactMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerSeller[0].DateRegistered)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BuyerSeller) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreferredContactMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRegistered)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BuyerSellerID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BuyerSellerID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BuyerSellerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
