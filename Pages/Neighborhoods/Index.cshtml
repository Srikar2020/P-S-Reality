@page
@model P_S_Reality.Pages.Neighborhoods.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].AveragePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].PopularityScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood[0].CrimeRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Neighborhood) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AveragePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PopularityScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Population)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CrimeRate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NeighborhoodID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NeighborhoodID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NeighborhoodID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
